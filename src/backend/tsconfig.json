{
    "compilerOptions": {
        "jsx": "react",
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",          // Output compiled files to the dist directory outside backend
        "rootDir": "./",              // Set rootDir to the current project directory
        "baseUrl": "./",              // Base URL for module resolution
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "allowJs": true,
        "declaration": true,
        "sourceMap": true,    
        "checkJs": true,    


    },
    "include": ["./*.ts", "./*.jsx", "./*.js",],   // Include all .ts and .tsx files in current directory and subdirectories
    "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}