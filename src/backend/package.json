{
  "name": "backend",
  "version": "1.0.0",
  "description": "email & pdf server",
  "main": "dist/server.js",
  "license": "ISC",
  "author": "XroSilence",
  "type": "module",
  "scripts": {
    "all": "npm run clean && npm run format && npm run lint && npm run build && npm run start",
    "build": "tsc",
    "start": "node ./dist/server.js",
    "dev": "nodemon --watch ./**/** .{ts,tsx,js,jsx} --exec ts-node ./dist/server.js",
    "clean": "rimraf dist, mkdir ./dist",
    "build-start": "npm run build && npm run start",
    "build-dev": "npm run build && npm run dev",
    "watch": "tsc --watch",
    "format": "prettier --write ./dist/*.{ts,tsx}",
    "lint": "eslint './*.{ts,tsx}' --fix"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.17.1",
    "glob": "^7.1.7",
    "he": "^1.2.0",
    "jspdf": "^2.5.2",
    "lru-cache": "^5.1.1",
    "nodemailer": "^6.9.16"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.5",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.4",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.3.0",
    "nodemon": "^3.1.9",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
