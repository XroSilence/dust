{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "module": "NodeNext",
        "moduleResolution": "node16",
        "outDir": "dist",
        "pretty": true,
        "skipLibCheck": false,
        "sourceMap": true,
        "target": "ES6"
        },
    "include": ["./**/*", "src/index.js", "src/server.js"],
    "exclude": ["node_modules", "dist"]
}