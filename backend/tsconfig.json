{
    "compilerOptions": {
        "target": "ES6",
        "module": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./**/**.{js,jsx,ts,tsx}", "src/server.js"],
    "exclude": ["node_modules", "dist"]
}