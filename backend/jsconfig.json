{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./*", "src/server.js"],
    "exclude": ["node_modules", "dist"]
}